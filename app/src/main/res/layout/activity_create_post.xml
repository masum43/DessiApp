            <LinearLayout
                android:id="@+id/clickPhoto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/dimenmargin"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/dimenmargin"
                android:background="@drawable/shape_white"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/videouploadedittext"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:background="@null"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textColorHint="@color/greyHint"
                    android:focusableInTouchMode="false"
                    android:hint="Upload image/video"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingRight="14dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/grpImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_add_black" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/added"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_added"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/postbutton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_neigh"
                android:text="POST"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#ffffff"
                android:textSize="@dimen/_10ssp" />


            <VideoView
                android:id="@+id/simpleVideoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />


            <VideoView
                android:id="@+id/VideoView"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/postphoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
