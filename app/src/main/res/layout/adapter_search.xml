<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/postLin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@drawable/shape_dash"
    android:elevation="@dimen/_20sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postUserPic"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.3"
            android:src="@drawable/ic_default_profile" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_weight="6"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Sanjaya Jena"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="sanjayajena37"
                android:textSize="@dimen/mem_neigh" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:gravity="center"
            >

           <!-- <ImageView
                android:id="@+id/optionMenuPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dot" />-->
<!--            <Button-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Follow"-->
<!--                android:paddingRight="@dimen/_3sdp"-->
<!--                android:paddingStart="@dimen/_3sdp"-->
<!--                android:textSize="@dimen/_9ssp"-->
<!--                android:layout_marginRight="@dimen/_5sdp"-->
<!--                android:paddingLeft="@dimen/_3sdp" />-->

            <Button
                android:id="@+id/folloWClick"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:text="FOLLOW"
                android:textSize="@dimen/_8ssp"
                android:textAlignment="center"
                android:visibility="gone"
                android:background="@color/neighbour"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center" />

            <Button
                android:id="@+id/unfolloWClick"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:text="Unfollow"
                android:textSize="@dimen/_8ssp"
                android:textAlignment="center"
                android:visibility="gone"
                android:background="@color/greyBg"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>

