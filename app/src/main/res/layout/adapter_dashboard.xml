<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postLin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dash"
    android:elevation="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postUserPic"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.3"
            android:src="@drawable/ic_default_profile" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="7.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Sanjaya Jena"
                    android:textColor="@color/black"
                    android:textSize="@dimen/mem_name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="sanjayajena37"
                    android:textSize="@dimen/mem_neigh" />
            </LinearLayout>

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="sanjayajena37"
                android:textSize="@dimen/mem_neigh" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:visibility="gone">

            <ImageView
                android:id="@+id/optionMenuPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dot" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/actTyp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Hi profileBody"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        android:visibility="gone" />
    <!-- <TextView
         android:id="@+id/postmsgtextview"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="15dp"
         android:text="Want to Sale my house in nehru palace ,Is any one "
         android:fontFamily="@font/montserrat_regular"
         android:textSize="13sp"/>-->
    <TextView
        android:id="@+id/actiTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Intrested then contact me at this place"
        android:textSize="13sp" />


    <ImageView
        android:id="@+id/picPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:src="@drawable/bg" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/likelayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/likeImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="0dp"
                android:src="@drawable/ic_thumb_up1" />

            <TextView
                android:id="@+id/txtLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Like"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/likelayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:padding="0dp"
                android:src="@drawable/ic_thumb_up2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Liked"
                android:textSize="13sp" />

        </LinearLayout>
        <!--<View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light" />-->

        <LinearLayout
            android:id="@+id/unlikelayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/unlikeImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_thumb_down1"
                android:padding="0dp" />


            <TextView
                android:id="@+id/txtUnlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Dislike"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/unlikelayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="@drawable/ic_thumb_down2"
                android:padding="0dp" />


            <TextView
                android:id="@+id/txtUnlike1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Dislike"
                android:textSize="13sp" />

        </LinearLayout>
        <!--<View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light" />-->
        <LinearLayout
            android:id="@+id/commentlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/commentimageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="@drawable/ic_comment"
                android:padding="3dp" />

            <TextView
                android:id="@+id/commenttextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/montserrat_regular"
                android:singleLine="true"
                android:text="Comment"
                android:textSize="13sp" />
        </LinearLayout>
        <!--<View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light" />-->

        <LinearLayout
            android:id="@+id/shareLay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/replylayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--                <ImageView-->
                <!--                    android:id="@+id/replyimageview"-->
                <!--                    android:layout_width="30dp"-->
                <!--                    android:layout_height="25dp"-->
                <!--                    android:layout_gravity="center_vertical"-->
                <!--                    android:padding="3dp"-->
                <!--                    android:src="@drawable/ic_share" />-->

                <ImageView
                    android:id="@+id/replyimageview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_share"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/replyttextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Share"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Liked"
            />

        <TextView
            android:id="@+id/unlikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_regular"
            android:text="1 Unlike" />
        <TextView
            android:id="@+id/cmntCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginLeft="@dimen/_15sdp"
             />
    </LinearLayout>
