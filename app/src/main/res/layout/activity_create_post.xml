            <LinearLayout
                android:id="@+id/posttypeSpin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/dimenmargin"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="@dimen/dimenmargin"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:background="@null"
                    android:textColorHint="@color/greyHint"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:hint="Activity"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/txtId"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="#000000"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/focus"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="@dimen/dimenmargin"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/dimenmargin"
                android:background="@drawable/shape_white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/yourmindedittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="18dp"
                    android:background="@null"
                    android:gravity="start"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:hint="What's on your mind?"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="textCapSentences|textMultiLine"
                    android:scrollbars="vertical"
                    android:textColorHint="@color/greyHint" />
            </LinearLayout>
